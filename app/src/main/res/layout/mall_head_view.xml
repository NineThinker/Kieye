<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/rg_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_shuma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a01"
            android:gravity="center"
            android:padding="3dp"
            android:text="数码" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a02"
            android:gravity="center"
            android:padding="3dp"
            android:text="高玩" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a03"
            android:gravity="center"
            android:padding="3dp"
            android:text="玩具" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a04"
            android:gravity="center"
            android:padding="3dp"
            android:text="生活" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a05"
            android:gravity="center"
            android:padding="3dp"
            android:text="服饰" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a06"
            android:gravity="center"
            android:padding="3dp"
            android:text="超编" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a07"
            android:gravity="center"
            android:padding="3dp"
            android:text="机器猫" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a08"
            android:gravity="center"
            android:padding="3dp"
            android:text="魔兽" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a09"
            android:gravity="center"
            android:padding="3dp"
            android:text="美队" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/a10"
            android:gravity="center"
            android:padding="3dp"
            android:text="星球" />
    </RadioGroup>


    <ListView
        android:id="@+id/lv_mall_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <TextView

        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="您可能喜欢"
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <TextView
        android:background="#22666666"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>