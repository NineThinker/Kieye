<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_gravity="center"
        android:background="#ff0000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout

            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/rl_movie_base_sosuokuang"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/white_sousuokaung"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">


            <ImageView
                android:id="@+id/sousuokaung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sousuokuang"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
              android:layout_marginLeft="3dp"
                android:background="@android:color/transparent"
                android:id="@+id/tv_search_movie_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:hint="找影视剧、影人、影院"
                android:textSize="12sp"
                android:textColor="#99666666"
                android:layout_alignBottom="@+id/sousuokaung"
                android:layout_toRightOf="@+id/sousuokaung"
                android:layout_toEndOf="@+id/sousuokaung" />


        </RelativeLayout>


        <TextView
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="取消"
            android:layout_weight="0"
            android:layout_width="40dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <TextView
         android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:text="热门搜索"
        android:background="#EEEEE0"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout

                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv1"
                    android:text="魔兽"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:background="#55000000"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv2"
                    android:text="快乐星球之三十六号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:background="#55000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout

            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv3"
                    android:text="独立日：卷土归来"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:background="#55000000"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv4"
                    android:text="更多搜索 >"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:text="类型"
        android:background="#EEEEE0"
        android:layout_width="match_parent"
        android:layout_height="35dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <TextView
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:text="地区"
        android:background="#EEEEE0"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

</LinearLayout>