<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <!--<android.support.design.widget.TabLayout-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/tb"-->
        <!--/>-->
                <!--&lt;!&ndash;app:tabSelectedTextColor="@android:color/holo_red_dark"&ndash;&gt;-->
                <!--app:tabTextColor="#666666"-->

    <LinearLayout
        android:layout_marginLeft="4dp"
        android:id="@+id/rg_oversea"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <Button
            android:gravity="center_vertical"

            android:textSize="13sp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:background="@drawable/rb_us_bg_selector"
            android:id="@+id/btn_caton"
            android:button="@android:color/white"
            android:textAlignment="center"
            android:text="动画"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:background="@drawable/rb_us_bg_selector"
                android:id="@+id/btn_santic"
                android:button="@android:color/white"
                android:textAlignment="center"
                android:text="科幻"
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:background="@drawable/rb_us_bg_selector"
                android:id="@+id/btn_comedy"
                android:button="@android:color/white"
                android:textAlignment="center"
                android:text="喜剧"
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:background="@drawable/rb_us_bg_selector"
                android:id="@+id/btn_us"
                android:button="@android:color/white"
                android:textAlignment="center"
                android:text="美国"
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:background="@drawable/rb_us_bg_selector"
                android:id="@+id/btn_blabla"
                android:button="@android:color/white"
                android:textAlignment="center"
                android:text="..."
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>


        />

    </LinearLayout>

    <TextView
        android:clickable="false"
        android:background="#22444444"
        android:layout_width="match_parent"
        android:layout_height="26dp"/>

    <GridView
        android:visibility="gone"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="90dp"></GridView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_oversea"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>







</LinearLayout>
