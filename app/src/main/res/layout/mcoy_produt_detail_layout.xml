<?xml version="1.0" encoding="utf-8"?>
<com.atguigu.kieye.view.snapscrollview.McoyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f1f1f1"
    android:fadeScrollbars="true"
    android:focusable="false"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_shangpin"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <TextView
                android:textSize="18sp"
                android:id="@+id/tv_title"
                android:text="正版魔兽世界T恤 超值99元买一送一"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/tv_price"
                        android:textSize="18sp"
                        android:textColor="#ff0000"
                        android:text="99"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <TextView
                        android:gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textColor="#ff0000"
                        android:text="元"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />



                </LinearLayout>

                <TextView
                    android:gravity="right"
                    android:text="已售90"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>




        </LinearLayout>

        <TextView
            android:layout_marginBottom="10dp"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout

            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">


            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="正版授权"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:paddingRight="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="假一赔十"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:text="真实评价"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


        <TextView

            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginBottom="10dp"
            android:background="#11000000"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout

            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">


            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:gravity="left"
                android:layout_gravity="center"
                android:text="选择数量、规格"
                           android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text=">"
                android:textSize="23sp"
                android:layout_width="25dp"
                android:layout_height="match_parent" />



        </LinearLayout>


        <TextView
            android:layout_marginBottom="10dp"
            android:background="#11000000"
            android:layout_width="match_parent"
            android:layout_height="20dp" />



        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:text="宝贝评价"

            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginBottom="10dp"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    </LinearLayout>




</com.atguigu.kieye.view.snapscrollview.McoyScrollView>