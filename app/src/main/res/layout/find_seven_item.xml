<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="95dp">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB"
                android:src="@drawable/backgroud_logo02" />
            <ImageView

                android:visibility="gone"
                android:id="@+id/iv_vedio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/play_movie_pic"
                android:layout_alignBottom="@+id/iv_icon"
                android:layout_alignRight="@+id/iv_icon"
                android:layout_alignEnd="@+id/iv_icon" />


        </RelativeLayout>


        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center">



            <LinearLayout
                android:id="@+id/rl_title"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <LinearLayout

                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxWidth="180dp"
                        android:textColor="#000000"
                        android:text="海底总你你你你你你你你你你你你你能我你你你你你你"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="13sp"
                android:lines="1"
                android:maxWidth="180dp"
                android:text="猫眼资讯"
                android:layout_below="@+id/rl_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView


                android:drawableLeft="@drawable/a3j"
                android:id="@+id/tv_commentcount"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:text="45"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_below="@+id/rl_title"
                android:layout_alignRight="@+id/rl_title"
                android:layout_alignEnd="@+id/rl_title" />

            <TextView

                android:drawableLeft="@drawable/a3j"
                android:id="@+id/tv_viewcount"
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:text="4036"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_below="@+id/rl_title"
                android:layout_toLeftOf="@+id/tv_commentcount"
                android:layout_toStartOf="@+id/tv_commentcount" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>