<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="95dp">
            <ImageView
                android:id="@+id/iv_item_pic"
                android:layout_width="70dp"
                android:layout_height="95dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB"
                android:src="@drawable/backgroud_logo02" />
            <ImageView

                android:layout_margin="4dp"
                android:id="@+id/iv_item_vedio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/play_movie_pic"
                android:layout_alignBottom="@+id/iv_item_pic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center">



            <LinearLayout
                android:id="@+id/rl_title"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_item_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="180dp"
                        android:textColor="#000000"
                        android:text="海底总dsdsdsssss"
                        android:textSize="16sp" />

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/tv_content_three"
                        >
                        <TextView
                            android:id="@+id/tv_bigscore"
                            android:text="6.9"
                            android:textSize="16sp"
                            android:textColor="#FFB90F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:id="@+id/tv_smallscore"
                            android:textSize="10sp"
                            android:textColor="#FFB90F"
                            android:text="分"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_two"
                android:text="大陆热映"
                android:layout_marginTop="3dp"
                android:visibility="invisible"
                android:textSize="8sp"
                android:ellipsize="end"
                android:lines="1"
                android:layout_below="@id/rl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_content_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="13sp"
                android:lines="1"
                android:maxWidth="180dp"
                android:text="item的内容的详解"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_cinema_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tv_content_three"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:textSize="13sp"
                android:lines="1"
                android:maxWidth="180dp"
                android:text="item放映影院的信息" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


                <Button
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:text="购票"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#ff0000"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/tv_cinema_content"
                    android:layout_alignRight="@+id/rl_title"
                    android:layout_alignEnd="@+id/rl_title" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>