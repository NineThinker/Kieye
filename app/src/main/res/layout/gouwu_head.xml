<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="95dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_icon"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB"
                android:src="@drawable/fake2" />
            <ImageView

                android:visibility="gone"
                android:id="@+id/iv_vedio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/play_movie_pic"
                android:layout_alignBottom="@+id/iv_icon"
                android:layout_alignRight="@+id/iv_icon"
                android:layout_alignEnd="@+id/iv_icon" />


        </RelativeLayout>


        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center">



            <LinearLayout
                android:id="@+id/rl_title"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <LinearLayout

                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxWidth="180dp"
                        android:textColor="#000000"
                        android:text="正版魔兽世界T恤 超值99元买一送一"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_singal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="13sp"
                android:lines="1"
                android:maxWidth="180dp"
                android:text="99元"
                android:layout_below="@+id/rl_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />




            <TextView

                android:id="@+id/tv_num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_alignBottom="@+id/textView7"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7" />

            <TextView

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:text="X"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/tv_singal_price"
                android:layout_toRightOf="@+id/tv_singal_price"
                android:layout_toEndOf="@+id/tv_singal_price"
                android:id="@+id/textView7" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>